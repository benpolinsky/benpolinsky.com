<div class='col-xs-12'>
  <%= bootstrap_form_for([:administration, @project]) do |f| %>

    <%= f.text_field :name %>

    <%= f.text_field :client %>

    <%= f.text_field :site_url %>

    <%= f.text_area :description %>

    <%= f.file_field :image %>

    <%= f.text_field :public_repo %>
    
    <%= f.check_box :show_on_front %>
    <%= f.text_area :front_description %>

    <%= f.datetime_select :creation_date, start_year: 2010, end_year: Time.zone.now.year %>

    <%= f.submit %>
<% end %>
</div>