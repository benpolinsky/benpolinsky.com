<p id="notice"><%= notice %></p>

<h1>Resumes</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Document</th>
      <th>Published</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @resumes.each do |resume| %>
      <tr>
        <td><%= resume.id %></td>
        <td><%= resume.document.file&.filename  %></td>
        <td><%= resume.published? ? 'yeah published' : 'naw not published' %></td>
        <td><%= link_to 'Show', [:administration, resume] %></td>
        <td><%= link_to 'Edit', edit_administration_resume_path(resume) %></td>
        <td><%= link_to 'Destroy', [:administration, resume], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

