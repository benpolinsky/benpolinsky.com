<%= form_with(model: [:administration, resume]) do |form| %>
  <% if resume.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(resume.errors.count, "error") %> prohibited this resume from being saved:</h2>

      <ul>
      <% resume.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class='form-group'>
    <% if resume.document.present?  %>
      <%= form.label :document, "Replace Current Document (#{resume.document.url})", class: 'control-label' %>
    <% else %>
      <%= form.label :document, "Document", class: 'control-label' %>
    <% end %>
      <%= form.file_field :document, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= form.label :published, "Published?", class: 'control-label' %>  
    <%= form.check_box :published %>
  </div>
    
  <div class="actions">
    <%= form.submit "Submit", class: 'btn' %>
  </div>
<% end %>
