<div class='col-xs-12'>
  <p id="notice"><%= notice %></p>

<h1>Listing Links</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Image</th>
      <th>Subtitle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.name %></td>
        <td><%= link.url %></td>
        <td><%= image_tag link.image.url(:thumb) %></td>
        <td><%= link.subtitle %></td>
        <td>
          <div class='btn-group'>
            <%= link_to 'Show', link, class: "btn btn-default" %>
            <%= link_to 'Edit', edit_link_path(link), class: "btn btn-default" %>
            <%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path, class: "btn btn-primary" %>
</div>